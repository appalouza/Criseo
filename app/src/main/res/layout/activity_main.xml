<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_videogame_asset_white_96dp"
        android:id="@+id/testbtn"/>

    <ImageButton
        android:id="@+id/launchGame"
        android:layout_width="175dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/launchSound"
        android:background="#F715F8"
        android:src="@drawable/ic_videogame_asset_white_96dp"
        android:text="Musique" />

    <ImageButton
        android:id="@+id/launchVideo"
        android:layout_width="175dp"
        android:layout_height="300dp"
        android:layout_above="@id/launchGame"
        android:src="@drawable/ic_play_circle_outline_white_24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="35dp"
        android:background="#18B7A2"
        android:text="Image" />

    <ImageButton
        android:id="@+id/launchSound"
        android:layout_width="175dp"
        android:layout_height="300dp"
        android:background="#f40d42"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_volume_up_white_96dp"
        android:layout_marginBottom="30dp"
        android:text="Jeu" />

    <ImageButton
        android:id="@+id/launchImg"
        android:layout_width="175dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_landscape_white_24dp"
        android:layout_above="@id/launchSound"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@id/launchVideo"
        android:background="#dbec5e"
        android:clickable="true"
        android:focusable="true"
        android:text="Musique" />

</RelativeLayout>